.new
  contact from
  = form_for @contact, url: contacts_path do |f|
  
    = f.text_field :name,placeholder: 'name*'
    %br/
    %br/

    = f.text_field :email,placeholder: 'email*'
    %br/
    %br/

    = f.text_area :message,placeholder: 'message*'
    %br/
    %br/
    = f.submit
